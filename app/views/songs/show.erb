<%#=binding.pry%>
<% if flash.has?(:message) %>
  <h2><%= flash[:message] %></h2>
<% end %> 

<h1>Title: <%= @song.name %></h1>
<h3>Artist: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></h3>
<h3>Genre:</h3>
<ul>
  <% @song.genres.each do |genre| %>
    <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></li>
  <% end %>
</ul>
<p><a href="/songs/<%= @song.slug %>/edit">Edit</a></p>
<a href="/songs">Back to List</a>
<p><a href="/">Back to Main</a></p>